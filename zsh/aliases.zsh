# Dotfiles!
alias dotfiles=$HOME/repos/misc/dotfiles

# Make Changing Directory Easy
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# Wrap git with hub
eval "$(hub alias -s)"

# OBS/IBS Switch.
alias eosc='osc -A https://api.opensuse.org'
alias iosc='osc -A https://api.suse.de'

# Various repository paths
alias repos=$HOME/repos/
alias rmisc=$HOME/repos/misc
alias ropenstack=$HOME/repos/openstack
alias rpocs=$HOME/repos/pocs/
