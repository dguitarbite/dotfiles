# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors = true
        interval = 5
}

order += "disk /home"
order += "disk /var"
order += "ethernet enp5s0"
# order += "wireless wlan0"
order += "cpu_temperature 0"
order += "load"
order += "volume master"
order += "tztime local"

ethernet enp5s0 {
        # if you use %speed, i3status requires root privileges
        format_up = "E: Up"
        format_down = "E: Down"
}

cpu_temperature 0 {
	format = "CPU %degreesC"
	max_threshold = 70
}

volume master {
        format = "Vol %volume"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

tztime local {
        format = "%A %H:%M %d-%m-%Y"
}

load {
        format = "Load %1min"
}

disk "/home" {
        format = "H: %free"
}

disk "/var" {
        format = "V: %free"
}
